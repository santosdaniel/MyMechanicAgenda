<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="generic_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/list_item_shape</item>
    </style>

    <style name="list_item" parent="generic_list_item" />

    <style name="generic_item_thumbnail">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/round_outline</item>
    </style>

    <style name="item_thumbnail" parent="generic_item_thumbnail" />

    <style name="textStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="items_list_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="load_progress_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="common_add_element_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/button_margins</item>
        <item name="android:layout_marginRight">@dimen/button_margins</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="add_element_button" parent="common_add_element_button" />

    <style name="matches_parent_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_coordinate_layout_style" parent="matches_parent_layout">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="main_app_bar_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_app_bar_height</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="main_sv_of_coordinate_layout_style" parent="matches_parent_layout" />

    <style name="main_content_of_coordinate_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_content_layout_style" parent="matches_parent_layout">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>
</resources>
